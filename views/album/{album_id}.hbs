{{!
{
	"title": "Album",
	"name": "album",
	"preprocessor": "utilities.js",
	"resources": {
        "album": "https://graph.facebook.com/{album_id}",
        "photos": "https://graph.facebook.com/{album_id}/photos"
    }
}
}}
<section id="album">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2><span class="text-muted">{{page.title}}:</span> {{resources.album.name}}</h2>
                <a href="/albums" class="btn btn-primary"><i class="fa fa-arrow-left"></i> Back To Albums</a>
                <hr />
            </div>
        </div>
        <div class="row">
            {{#resources.photos.data}}
                <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3" data-graph-id="{{id}}">
                    <div class="thumbnail">
                        <div class="thumbnail-mask">
                            <a href="{{source}}" data-toggle="modal-photo" data-target="#modal-photo" data-graph-id="{{id}}">
                                <img class="rounded loading" src="/images/preloader.gif" data-src="{{source}}" data-graph-id="{{id}}" alt="{{name}}">
                            </a>
                        </div>
                        <div class="caption">
                            <p>
                                <small><span class="text-muted">Updated:</span> {{updated_time}}</small>
                            </p>

                        </div>
                    </div>
                </div>
            {{/resources.photos.data}}
        </div>
    </div>
</section>

<div class="modal fade" id="modal-photo" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body">
                <img src="/images/preloader.gif" />
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->