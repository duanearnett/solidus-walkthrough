{{!
{
	"title": "Albums",
	"name": "albums",
	"resources": {
        "albums": "https://graph.facebook.com/americascup/albums"
    }
}
}}

<section id="albums">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2>{{page.title}}</h2>
                <hr />
            </div>
        </div>
        <div class="row">
            {{#resources.albums.data}}
            <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3 album" data-album-id="{{id}}">
                <div class="thumbnail">
                    <div class="thumbnail-mask">
                        <img class="rounded loading" src="/images/preloader.gif" data-graph-id="{{cover_photo}}" alt="{{name}}">
                    </div>
                    <div class="caption">
                        <h3>{{name}}</h3>
                        <p>
                            <small><span class="text-muted">Last Updated:</span> {{updated_time}}</small>
                            <small class="text-muted"><strong>{{count}}</strong> images</small>
                        </p>
                        <p>
                            <a href="/album/{{id}}" class="btn btn-primary btn-block"><i class="fa fa-picture-o"></i> View Album</a>
                        </p>
                    </div>
                </div>
            </div>
            {{/resources.albums.data}}
        </div>
    </div>
</section>